<div data-controller="mailbox">
  <div class="d-flex justify-content-between p-4">
    <div class="w-25">
    <%= form_with url: '/', method: :get, data: { action: 'submit->mailbox#search' } do |f| %>
      <%= text_field_tag :q, nil, class: 'form-control', placeholder: 'Search...', data: {target: "mailbox.q"} %>
      <%= label_tag 'From' %>
      <%= date_field_tag :date_from, nil, class: 'form-control', data: {target: "mailbox.from"} %>
      <%= label_tag 'To' %>
      <%= date_field_tag :date_to, nil, class: 'form-control', data: {target: "mailbox.to"} %>
      <%= submit_tag("Search", class: "btn btn-primary mt-4") %>
    <% end %>
    </div>
    <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete } %>
  </div>

  <div class="p-4">
    <table class="table table-striped" >
      <thead>
        <tr>
          <th>Subject</th>
          <th>From</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody data-target="mailbox.mails"></tbody>
    </table>
    <div data-target="mailbox.pagination"></div>
  </div>
</div>
